<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingFragment"
    android:background="#6FE5F5E6"
    >


    <LinearLayout
        android:id="@+id/linear_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:backgroundTint="#3EEAF4EA"
        >

        <ImageView
            android:id="@+id/img_dangNhap"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/outline_account_circle_24"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            />
        <TextView
            android:id="@+id/text_DangNhap"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            />
        <ImageButton
            android:id="@+id/btn_DangNhap"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            android:backgroundTint="#3EEAF4EA"
            android:layout_marginTop="5dp"

            />
    </LinearLayout>

    <View
        android:id="@+id/View_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_Login"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:id="@+id/linear_DieuKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/View_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="#3EEAF4EA">

        <ImageView
            android:id="@+id/img_DieuKhoan"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_lock_24"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            />
        <TextView
            android:id="@+id/text_DieuKhoan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Điều khoản &amp; Chính sách "
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingTop="20dp"/>

        <ImageButton
            android:id="@+id/btn_DieuKhoan"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            android:backgroundTint="#3EEAF4EA"
            android:layout_marginTop="10dp"

            />
    </LinearLayout>

    <View
        android:id="@+id/View_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_DieuKhoan"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:id="@+id/linear_User"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/View_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="#3EEAF4EA">

        <ImageView
            android:id="@+id/img_User"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_badge_24"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            />
        <TextView
            android:id="@+id/text_User"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="ID người dùng"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingTop="20dp"/>
        <TextView
            android:id="@+id/id_User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CookRep_I4KJWqM6C9gxFDVqJwI359fIuZH3"
            android:textSize="13sp"
            android:paddingStart="30dp"
            />

    </LinearLayout>
    <View
        android:id="@+id/View_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_User"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        />
    <LinearLayout
        android:id="@+id/linear_Version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/View_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="#3EEAF4EA">

        <ImageView
            android:id="@+id/img_Version"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_info_24"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            />
        <TextView
            android:id="@+id/text_Version"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="App version"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingTop="20dp"

            />

        <TextView
            android:id="@+id/id_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v2.6.2"
            android:paddingStart="30dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/View_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_Version"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:id="@+id/linear_Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/View_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="#3EEAF4EA"
        >

        <ImageView
            android:id="@+id/img_Logout"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_logout_24"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            />
        <TextView
            android:id="@+id/text_LogOut"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            />
        <ImageButton
            android:id="@+id/btn_Logout"
            android:layout_marginTop="10dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            android:backgroundTint="#3EEAF4EA"

            />
    </LinearLayout>
    <View
        android:id="@+id/View_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_Logout"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        />





</androidx.constraintlayout.widget.ConstraintLayout>