<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_name_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="@color/white"
    android:theme="@style/Theme.Material3.DayNight"
    >

    <View
        android:id="@+id/View_Forget"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C1BBBB"
        app:layout_constraintTop_toBottomOf="@id/Back_ForgotPassword"
        />
    <ImageButton
        android:id="@+id/Back_ForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Back_ForgotPassword"
        android:text="Lấy lại mật khẩu"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginTop="10dp"

        />
    <EditText
        android:id="@+id/edEmailForgot"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/forgot_pass_border"
        android:hint="Nhập email của bạn"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
        android:layout_margin="20dp"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi yêu cầu đặt lại mật khẩu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edEmailForgot"
        android:layout_marginTop="20dp"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="#469E10"
        android:gravity="center"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_margin="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>